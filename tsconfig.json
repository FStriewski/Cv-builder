{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "resolveJsonModule": true,
      "semicolon": [
        true,
        "always",
        "ignore-interfaces",
        "ignore-bound-class-methods"
      ],
      "max-line-length": [
        true,
        80
      ],
      "indent": [
        true,
        "spaces",
        2
      ],
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
